@model TutorManagementProject.Models.Subject
@{
    ViewBag.Title = "EditSubject";
}

<h2 style="color:brown; background-color:yellow; text-align:center">Edit Subject Details in this page </h2>

<br />

@using (Html.BeginForm("EditSubject", "Subject"))
{
    <div style=" background-color:aqua;color:brown; padding-left:20px; margin:20px ">
            @Html.HiddenFor(T => T.SubjectId)

            @Html.LabelFor(T => T.SubjectName)<br />
            @Html.TextBoxFor(T => T.SubjectName)
            <br /><br />
            @Html.LabelFor(T => T.Description)<br />
            @Html.TextAreaFor(T => T.Description)
            <br /><br />
            @Html.LabelFor(T => T.Active)<br />
            @Html.TextBoxFor(T => T.Active)
    </div>
    <br />
    <div style="text-align:center;">
        <input type="submit" value="Update" name="btnUpdate" style="color:red; background-color:green" /> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        @Html.ActionLink("Cancel", "SubjectDetails")
    </div>
}
