@model TutorManagementProject.Models.Batch
@{
    ViewBag.Title = "BatchDetail";
}

<h2 style="text-align:center; color:red; background-color:aqua; border:medium">Create to Logic Dispaly Single - Batch Detail - on this Page </h2>

<br />

<table  border="1"  style="border-color:blue; border-width:thin" class="table";>
   
    <tr>
        <td style="color:red; font-size:larger"> Batch Name :</td>
        <td>@Html.TextBoxFor(B => B.BatchName, new { @readonly = true })</td>
    </tr>
    <tr>
        <td style="color:red; font-size:larger"> Batch Fee :</td>
        <td>@Html.TextBoxFor(B => B.BatchFee, new { @readonly = true })</td>
    </tr>
    <tr>
        <td  style="color:red; font-size:16px"> Student Id - Name :</td>
        <td>@Html.TextBoxFor(B => B.Student.StudentName, new { @readonly = true })</td>
    </tr>
    <tr>
        <td  style="color:red; font-size:20px"> Tutor Id - Name :</td>
        <td>@Html.TextBoxFor(B => B.Tutor.TutorName, new { @readonly = true })</td>
    </tr>
    <tr>
        <td  style="color:red; font-size:16px"> Timin :</td>
        <td>@Html.TextBoxFor(B => B.Timing, new { @readonly = true })</td>
    </tr>
    <tr>
        <td  style="color:red; font-size:16px"> StartDate :</td>
        <td>@Html.TextBoxFor(B => B.StartDate, new { @readonly = true })</td>
    </tr>
    <tr>
        <td  style="color:red; font-size:16px"> EndDate :</td>
        <td>@Html.TextBoxFor(B => B.EndDate, new { @readonly = true })</td>
    </tr>
    <tr>
        <td  style="color:red; font-size:16px"> Mode :</td>
        <td>@Html.TextBoxFor(B => B.Mode, new { @readonly = true })</td>
    </tr>
    <tr>
        <td  style="color:red; font-size:16px"> Active :</td>
        <td>@Html.CheckBoxFor(B => B.Active)</td>
    </tr>
    
</table>






















<h4 style="text-align:center">@Html.ActionLink("Go to Main Page", "BatchDetails")</h4>